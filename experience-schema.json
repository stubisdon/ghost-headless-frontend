{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Interactive Experience Schema",
  "description": "Schema for defining interactive experience with text, inputs, and choices",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "duration": { "type": "number", "description": "Total duration in seconds" },
        "audioFile": { "type": "string", "description": "Path to audio file" }
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": { "enum": ["text"] },
              "time": { "type": "number", "description": "Timestamp in seconds" },
              "text": { "type": "string" },
              "duration": { "type": "number", "description": "How long to show (optional)" }
            },
            "required": ["type", "time", "text"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "enum": ["input"] },
              "time": { "type": "number" },
              "label": { "type": "string" },
              "placeholder": { "type": "string" },
              "required": { "type": "boolean", "default": true },
              "timeout": { "type": "number", "description": "Seconds before auto-advancing (optional)" },
              "storeAs": { "type": "string", "description": "Variable name to store input value" }
            },
            "required": ["type", "time", "label", "storeAs"]
          },
          {
            "type": "object",
            "properties": {
              "type": { "enum": ["choice"] },
              "time": { "type": "number" },
              "question": { "type": "string" },
              "options": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "text": { "type": "string" },
                    "value": { "type": "string" },
                    "leadsTo": { "type": "string", "description": "Ending ID this choice leads to" }
                  },
                  "required": ["text", "value"]
                },
                "minItems": 2,
                "maxItems": 3
              },
              "timeout": { "type": "number", "description": "Seconds before auto-selecting first option (optional)" }
            },
            "required": ["type", "time", "question", "options"]
          }
        ]
      }
    },
    "endings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "text": { "type": "string" },
          "conditions": {
            "type": "object",
            "description": "Conditions that must be met to reach this ending",
            "additionalProperties": {
              "type": "string",
              "description": "Variable name: expected value"
            }
          }
        },
        "required": ["id", "title", "text"]
      }
    }
  },
  "required": ["timeline", "endings"]
}

